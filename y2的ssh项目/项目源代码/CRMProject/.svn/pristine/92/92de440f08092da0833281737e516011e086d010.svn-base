	//系统当前时间 创建机会当前shi'j
	layui.use(['form', 'layedit', 'laydate'], function() {
		  var d = new Date();
	      var form = layui.form
	          , layer = layui.layer
	          , laydate = layui.laydate;
	      laydate.render({
	          elem: '#pla_date', //指定元素
	          type:'datetime', // 可选择：年、月、日、时、分、秒
	          format: 'yyyy年M月dd日 ', //指定时间格式
	          value: d.getFullYear() + '-' + lay.digit(d.getMonth() + 1) + '-' + lay.digit(d.getDate()), // 指定值
	      });
	})
	
	
	
		 